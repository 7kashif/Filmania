<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_black">

    <View
        android:id="@+id/itemTitle"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#2C2C2C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/itemReleaseDate"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#2C2C2C"
        app:layout_constraintStart_toStartOf="@id/itemTitle"
        app:layout_constraintTop_toBottomOf="@id/itemTitle" />

    <View
        android:id="@+id/itemRuntime"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#2C2C2C"
        app:layout_constraintStart_toEndOf="@id/itemReleaseDate"
        app:layout_constraintTop_toBottomOf="@id/itemTitle" />

    <View
        android:id="@+id/itemStatus"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#2C2C2C"
        app:layout_constraintStart_toEndOf="@id/itemRuntime"
        app:layout_constraintTop_toBottomOf="@id/itemTitle" />

    <View
        android:id="@+id/itemPager"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_margin="10dp"
        android:background="#2C2C2C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemReleaseDate" />

    <View
        android:id="@+id/itemPoster"
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:layout_margin="10dp"
        android:background="#2C2C2C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemPager" />

    <View
        android:id="@+id/itemGenre"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:background="#2C2C2C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemPoster"
        app:layout_constraintTop_toBottomOf="@id/itemPager" />

    <View
        android:id="@+id/itemRating"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="#2C2C2C"
        app:layout_constraintBottom_toBottomOf="@id/itemPoster"
        app:layout_constraintEnd_toStartOf="@id/itemFavorite"
        app:layout_constraintStart_toEndOf="@id/itemPoster"
        app:layout_constraintTop_toBottomOf="@id/itemGenre" />

    <View
        android:id="@+id/itemFavorite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="#2C2C2C"
        app:layout_constraintBottom_toBottomOf="@id/itemPoster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemRating"
        app:layout_constraintTop_toBottomOf="@id/itemGenre" />

    <View
        android:id="@+id/itemOverView"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_margin="10dp"
        android:background="#2C2C2C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemPoster" />

    <View
        android:id="@+id/itemVid"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_margin="10dp"
        android:background="#2C2C2C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemOverView" />

</androidx.constraintlayout.widget.ConstraintLayout>