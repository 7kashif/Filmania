<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:context=".fragments.DetailFragment">

            <ImageView
                android:id="@+id/posterIV"
                android:layout_width="175dp"
                android:layout_height="300dp"
                android:background="@drawable/curve_view"
                android:scaleType="fitXY"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/titleTV"
                tools:src="@drawable/ic_image" />

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:background="@drawable/curve_view"
                app:layout_constraintStart_toEndOf="@id/posterIV"
                app:layout_constraintTop_toTopOf="@id/posterIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ratingTV"
                tools:text="Title: Money Heist" />
            <TextView
                android:id="@+id/ratingTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:background="@drawable/curve_view"
                app:layout_constraintTop_toBottomOf="@id/titleTV"
                app:layout_constraintEnd_toEndOf="@id/titleTV"
                app:layout_constraintStart_toStartOf="@id/titleTV"
                app:layout_constraintBottom_toTopOf="@id/originalLanguageTV"
                tools:text="Rating: 6.9"/>
            <TextView
                android:id="@+id/originalLanguageTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:background="@drawable/curve_view"
                app:layout_constraintTop_toBottomOf="@id/ratingTV"
                app:layout_constraintStart_toStartOf="@id/ratingTV"
                app:layout_constraintEnd_toEndOf="@id/ratingTV"
                app:layout_constraintBottom_toTopOf="@id/releaseDateTV"
                tools:text="Language: Spanish"/>

            <TextView
                android:id="@+id/releaseDateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_view"
                android:padding="4dp"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/posterIV"
                app:layout_constraintEnd_toEndOf="@id/originalLanguageTV"
                app:layout_constraintStart_toStartOf="@id/originalLanguageTV"
                app:layout_constraintTop_toBottomOf="@id/originalLanguageTV"
                tools:text="First Air Date: 12-3-2021" />

            <TextView
                android:id="@+id/overViewTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:padding="5dp"
                android:background="@drawable/curve_view"
                app:layout_constraintTop_toBottomOf="@id/posterIV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Some smart idiots trying to rob a bank bcz they are
                too dumb to make money the right way." />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>